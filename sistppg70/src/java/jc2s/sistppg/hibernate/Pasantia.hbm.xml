<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.Pasantia" table="PASANTIA">
      <!-- 0 -->
      <id name="idPasantia" column="idPasantia">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="titulo" column="titulo" type="string" not-null="true"/>
      <!-- 2 -->
      <many-to-one name="tutor_academico" column="tutor_academico" not-null="true" />      <!-- 3 -->
      <many-to-one name="tutor_industrial" column="tutor_industrial" not-null="true" />      <!-- 4 -->
      <many-to-one name="proyecto" column="proyecto" not-null="true" unique="true" />      <!-- 5 -->
      <many-to-one name="estatus" column="estatus" not-null="true" />      <!-- 6 -->
      <property name="resumen" column="resumen" type="text" not-null="true"/>
      <!-- 7 -->
      <property name="objetivos_generales" column="objetivos_generales" type="text" not-null="true"/>

    </class>
</hibernate-mapping>