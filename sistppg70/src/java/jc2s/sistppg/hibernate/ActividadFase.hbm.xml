<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.ActividadFase" table="ACTIVIDADFASE">
      <!-- 0 -->
      <id name="idActividadFase" column="idActividadFase">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="descripcion" column="descripcion" type="text" not-null="true"/>
      <!-- 2 -->
      <property name="tiempo_estimado" column="tiempo_estimado" type="time" not-null="true"/>
      <!-- 3 -->
      <many-to-one name="fase" column="fase" not-null="true" />
    </class>
</hibernate-mapping>