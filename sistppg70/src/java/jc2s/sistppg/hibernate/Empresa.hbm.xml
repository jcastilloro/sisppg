<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.Empresa" table="EMPRESA">
      <!-- 0 -->
      <id name="idEmpresa" column="idEmpresa">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="login" column="login" type="string" not-null="true" unique="true"/>
      <!-- 2 -->
      <property name="password" column="password" type="string" not-null="true"/>
      <!-- 3 -->
      <property name="nombre" column="nombre" type="string" not-null="true"/>
      <!-- 4 -->
      <property name="rif" column="rif" type="string" not-null="true"/>
      <!-- 5 -->
      <property name="telefono" column="telefono" type="string" not-null="true"/>
      <!-- 6 -->
      <property name="direccion" column="direccion" type="string" not-null="true"/>
      <!-- 7 -->
      <many-to-one name="ciudad" column="ciudad" not-null="true" />
    </class>
</hibernate-mapping>