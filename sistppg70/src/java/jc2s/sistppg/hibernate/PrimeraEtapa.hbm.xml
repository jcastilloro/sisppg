<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.PrimeraEtapa" table="PRIMERAETAPA">
      <!-- 0 -->
      <id name="idPrimeraEtapa" column="idPrimeraEtapa">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="descripcion_topicos" column="descripcion_topicos" type="text" not-null="true"/>
      <!-- 2 -->
      <many-to-one name="etapa" column="etapa" not-null="true" />
    </class>
</hibernate-mapping>