<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ve.usb.sistema.hibernate.Empresa" table="EMPRESA">
      <!-- 0 -->
      <id name="idEmpresa" column="idEmpresa">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="rif" column="rif" type="string" not-null="true" unique="true"/>
      <!-- 2 -->
      <property name="nombreEmpresa" column="nombreEmpresa" type="string" not-null="true"/>
      <!-- 3 -->
      <property name="telefono" column="telefono" type="string"/>
      <!-- 4 -->
      <property name="direccion" column="direccion" type="string" not-null="true"/>
      <!-- 5 -->
      <property name="password" column="password" type="string" not-null="true"/>
      <!-- 6 -->
      <property name="loginempresa" column="loginempresa" type="string" not-null="true" unique="true"/>
      <!-- 7 -->
      <property name="ciudad" column="ciudad" type="string" not-null="true"/>
      <!-- 8 -->
      <property name="pais" column="pais" type="string" not-null="true"/>

    </class>
</hibernate-mapping>