<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.Ciudad" table="CIUDAD">
      <!-- 0 -->
      <id name="idCiudad" column="idCiudad">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="nombre" column="nombre" type="string" not-null="true" unique="true"/>
      <!-- 2 -->
      <many-to-one name="pais" column="pais" not-null="true" />
    </class>
</hibernate-mapping>