<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.Usuario" table="USUARIO">
      <!-- 0 -->
      <id name="idUsuario" column="idUsuario">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="usbid" column="usbid" type="string" not-null="true" unique="true"/>
      <!-- 2 -->
      <property name="tipo_actor" column="tipo_actor" type="string"/>

    </class>
</hibernate-mapping>