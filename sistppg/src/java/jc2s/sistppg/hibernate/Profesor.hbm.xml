<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jc2s.sistppg.hibernate.Profesor" table="PROFESOR">
      <!-- 0 -->
      <id name="idProfesor" column="idProfesor">
        <generator class="native"/>
      </id>

      <!-- 1 -->
      <property name="usbid" column="usbid" type="string" unique="true"/>
      <!-- 2 -->
      <property name="nombre" column="nombre" type="string" not-null="true"/>
      <!-- 3 -->
      <property name="apellido" column="apellido" type="string" not-null="true"/>
      <!-- 4 -->
      <property name="cedula" column="cedula" type="string" not-null="true" unique="true"/>
      <!-- 5 -->
      <property name="email" column="email" type="string"/>
      <!-- 6 -->
      <many-to-one name="departamento" column="departamento" not-null="true" />
    </class>
</hibernate-mapping>